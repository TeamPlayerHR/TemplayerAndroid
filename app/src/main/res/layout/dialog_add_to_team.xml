<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <com.cts.teamplayer.customui.CustomTextviewBold
                android:id="@+id/tv_title_on_create_team_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/iv_cancel_dialog_add_to_team"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:src="@drawable/email"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/light_grey_new"
            />
        <com.cts.teamplayer.customui.CustomTextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/black"
            android:text="@string/select_team"
            >
        </com.cts.teamplayer.customui.CustomTextView>
        <RelativeLayout
            android:id="@+id/rl_select_team_in_participat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/rounded_doted_btn"
            >
            <com.cts.teamplayer.customui.CustomTextView
                android:id="@+id/edit_user_role_in_req_demo"
                android:layout_toRightOf="@+id/iv_user_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@null"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:hint="Select Team"
                android:textColorHint="@color/light_grey_new"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                />
            <ImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/down"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="2"
                >
                <RelativeLayout
                    android:id="@+id/rl_sign_in"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_blue_btn"
                    >
                    <com.cts.teamplayer.customui.CustomTextviewBold
                        android:id="@+id/tv_signin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/save"
                        android:padding="@dimen/_7sdp"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/_12sdp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_new_user"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/rounded_black_btn"
                    >

                    <com.cts.teamplayer.customui.CustomTextviewBold
                        android:id="@+id/tv_new_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_7sdp"
                        android:text="@string/cancel"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>
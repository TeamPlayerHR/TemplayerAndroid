<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/whit_new"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_doted_btn"
                >
                <com.cts.teamplayer.customui.CustomEditText
                    android:id="@+id/edit_ful_name_rq"
                    android:layout_toRightOf="@+id/iv_user_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:hint="@string/full_name"
                    android:textColorHint="@color/light_grey_new"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rounded_doted_btn"
                >
                <com.cts.teamplayer.customui.CustomEditText
                    android:id="@+id/edit_company_name_rq"
                    android:layout_toRightOf="@+id/iv_user_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:hint="@string/company_name"
                    android:textColorHint="@color/light_grey_new"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rounded_doted_btn"
                >
                <com.cts.teamplayer.customui.CustomEditText
                    android:id="@+id/edit_phone_num_rq"
                    android:layout_toRightOf="@+id/iv_user_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:hint="@string/phone_num"
                    android:textColorHint="@color/light_grey_new"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rounded_doted_btn"
                >
                <com.cts.teamplayer.customui.CustomEditText
                    android:id="@+id/edit_email_rq"
                    android:layout_toRightOf="@+id/iv_user_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:hint="@string/phone_num"
                    android:textColorHint="@color/light_grey_new"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    />
            </RelativeLayout>
            <CheckBox
                android:id="@+id/simpleCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/light_grey_new"
                android:text="@string/accept_all_privacy_privacy"/>
            <com.cts.teamplayer.customui.CustomButton
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_25sdp"
               android:paddingRight="@dimen/_20sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:text="@string/request_a_demo"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:background="@color/light_blue"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
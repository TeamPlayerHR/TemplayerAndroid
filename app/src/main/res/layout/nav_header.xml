<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:background="@color/white"
            android:id="@+id/ll_main"
            android:layout_toLeftOf="@+id/img_cross"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:id="@+id/rl_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/rounded_blue_btn"
                    >
                    <com.cts.teamplayer.customui.CustomTextviewBold
                        android:id="@+id/tv_signin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/sign_in"
                        android:padding="@dimen/_8sdp"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/_12sdp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/rounded_corner_blue"
                    >
                    <com.cts.teamplayer.customui.CustomTextviewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_blue"
                        android:text="@string/signup"
                        android:padding="@dimen/_8sdp"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/_12sdp"
                        />
                </RelativeLayout>
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:id="@+id/tv_open_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:padding="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:textSize="@dimen/_11sdp"
                    android:text="@string/home"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1ssp"
                    android:background="@color/light_grey_new"
                    />
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:id="@+id/tv_open_how_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:padding="@dimen/_7sdp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textSize="@dimen/_11sdp"
                    android:text="@string/how_it_works"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/light_grey_new"
                    />
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:id="@+id/tv_open_vision_tech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:padding="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textSize="@dimen/_11sdp"
                    android:text="@string/vision_technology"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/light_grey_new"
                    />
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:id="@+id/tv_open_contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:padding="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textSize="@dimen/_11sdp"
                    android:text="@string/contact_us"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/light_grey_new"
                    />
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:id="@+id/tv_open_news"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:padding="@dimen/_7sdp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textSize="@dimen/_11sdp"
                    android:text="@string/news_"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/light_grey_new"
                    />
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:id="@+id/tv_open_faq"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:padding="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textSize="@dimen/_11sdp"
                    android:text="@string/faq_s"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/light_grey_new"
                    />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </LinearLayout>
        <ImageView
            android:id="@+id/img_cross"
            android:layout_width="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/close"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>
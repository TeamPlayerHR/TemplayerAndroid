<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            >
            <RelativeLayout
                android:id="@+id/rl_calculator"
                android:layout_width="match_parent"
                android:background="@color/light_blue"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_5sdp"
                        >
                        <com.cts.teamplayer.customui.CustomTextviewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:layout_gravity="center"
                            android:textColor="@color/light_blue"
                            android:textSize="@dimen/_13sdp"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_5sdp"
                        >
                        <com.cts.teamplayer.customui.CustomTextviewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:layout_gravity="center"
                            android:textColor="@color/light_blue"
                            android:textSize="@dimen/_13sdp"
                            />
                    </androidx.cardview.widget.CardView>
                    <com.cts.teamplayer.customui.CustomTextviewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_5sdp"
                        >
                        <com.cts.teamplayer.customui.CustomTextviewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:layout_gravity="center"
                            android:textColor="@color/light_blue"
                            android:textSize="@dimen/_13sdp"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_5sdp"
                        >
                        <com.cts.teamplayer.customui.CustomTextviewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:layout_gravity="center"
                            android:textColor="@color/light_blue"
                            android:textSize="@dimen/_13sdp"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:background="@color/whit_new"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@color/light_blue"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_15sdp"
                        android:background="@color/white"
                        android:elevation="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_240sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:orientation="vertical">
                            <com.cts.teamplayer.customui.CustomTextviewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_30sdp"
                                android:textColor="@color/light_blue"
                                android:textSize="@dimen/_11sdp"
                                android:textAllCaps="true"
                                android:text="@string/q1_what_is_lorem_ipsum"
                                />
                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_30sdp"
                                    android:text="  Lorem spum is simply dummy text"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:checked="false"
                                    android:textSize="@dimen/_10sdp" />
                                <RadioButton
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_30sdp"
                                    android:text="  Lorem spum is simply dummy text"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:checked="false"
                                    android:textSize="@dimen/_10sdp" />
                                <RadioButton
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_30sdp"
                                    android:text="  Lorem spum is simply dummy text"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:checked="false"
                                    android:textSize="@dimen/_10sdp" />
                                <RadioButton
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_30sdp"
                                    android:text="  Lorem spum is simply dummy text"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:checked="false"
                                    android:textSize="@dimen/_10sdp" />
                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_130sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    app:cardElevation="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_25sdp"
                                    >
                                    <com.cts.teamplayer.customui.CustomButton
                                        android:id="@+id/btn_submit_questionnaire"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textStyle="bold"
                                        android:text="@string/submit"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"
                                        android:background="@color/light_blue"
                                        />
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"/>
                            </RadioGroup>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
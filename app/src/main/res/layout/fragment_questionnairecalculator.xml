<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_1"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="@color/light_blue"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                >

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:background="@color/whit_new"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:background="@color/light_blue"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/questionnaire_complete_new"/>
                    <com.cts.teamplayer.customui.CustomButton
                        android:id="@+id/btn_sent_invite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_60sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:layout_marginEnd="@dimen/_60sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:padding="@dimen/_10sdp"
                        android:text="INVITE PARTICIPANT"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:background="@color/light_blue"
                        />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <com.cts.teamplayer.customui.CustomTextviewBold
            android:visibility="visible"
            android:id="@+id/tv_1_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_50sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:text="Completed"/>
        <com.cts.teamplayer.customui.CustomTextView
            android:visibility="visible"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="You have completed questionare."
            android:textSize="@dimen/_10sdp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_2"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            >
            <RelativeLayout
                android:id="@+id/rl_calculator"
                android:layout_width="match_parent"
                android:background="@color/light_blue"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_5sdp"
                        >
                        <com.cts.teamplayer.customui.CustomTextviewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="center"
                            android:textColor="@color/light_blue"
                            android:textSize="@dimen/_13sdp"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_5sdp"
                        >
                        <com.cts.teamplayer.customui.CustomTextviewBold
                            android:id="@+id/tv_minutes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="center"
                            android:textColor="@color/light_blue"
                            android:textSize="@dimen/_13sdp"
                            />
                    </androidx.cardview.widget.CardView>
                    <com.cts.teamplayer.customui.CustomTextviewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_5sdp"
                        >
                        <com.cts.teamplayer.customui.CustomTextviewBold
                            android:id="@+id/tv_seond"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="center"
                            android:textColor="@color/light_blue"
                            android:textSize="@dimen/_13sdp"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_5sdp"
                        >
                        <com.cts.teamplayer.customui.CustomTextviewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="center"
                            android:textColor="@color/light_blue"
                            android:textSize="@dimen/_13sdp"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:background="@color/whit_new"
            >
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@color/light_blue"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_15sdp"
                            android:background="@color/white"
                            android:elevation="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_240sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:orientation="vertical">
                                <com.cts.teamplayer.customui.CustomTextviewBold
                                    android:id="@+id/tv_question"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_20sdp"
                                    android:layout_marginRight="@dimen/_20sdp"
                                    android:textColor="@color/light_blue"
                                    android:textSize="@dimen/_11sdp"
                                    android:ellipsize="end"
                                    android:maxLines="6"
                                    android:textAllCaps="true"
                                    android:text="@string/q1_what_is_lorem_ipsum"
                                    />
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyler_question_answer"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_130sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    app:cardElevation="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_25sdp"
                                    >
                                    <com.cts.teamplayer.customui.CustomButton
                                        android:id="@+id/btn_submit_questionnaire"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textStyle="bold"
                                        android:text="@string/submit"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"
                                        android:background="@color/light_blue"
                                        />
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"/>


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
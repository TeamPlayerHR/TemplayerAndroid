<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/whit_new"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/light_blue"
        >
        <ImageView
            android:id="@+id/img_back_on_report"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/back"
            />
        <com.cts.teamplayer.customui.CustomTextviewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="Compatibility Report"
            android:textSize="@dimen/_13sdp"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/_5sdp"
                        ><LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            >
                            <com.cts.teamplayer.customui.CustomTextviewBold
                                android:id="@+id/tv_downloadSummary"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_7sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@color/light_blue"
                                android:text="Download Summary"
                                android:textColor="@color/white"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal"
                                >
                                <ImageView
                                    android:id="@+id/img_select_name"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:src="@drawable/radio_uncheck"
                                    />
                                <com.cts.teamplayer.customui.CustomTextviewBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="@string/name"
                                    />

                                <ImageView
                                    android:id="@+id/img_select_id"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:src="@drawable/radio_uncheck"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    />
                                <com.cts.teamplayer.customui.CustomTextviewBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    android:text="IM ID"
                                    />

                            </LinearLayout>

                        </RelativeLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_60sdp"
                            android:src="@drawable/comp_logo"
                            />
                        <com.cts.teamplayer.customui.CustomTextviewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textAlignment="center"
                            android:text="@string/compatibility_report"/>
                        <com.cts.teamplayer.customui.CustomTextView
                            android:id="@+id/tv_user_name_report"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textAlignment="center"
                            android:text="For: Rahul Tamrakar"/>
                        <com.cts.teamplayer.customui.CustomTextView
                            android:id="@+id/tv_date_in_report"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textAlignment="center"
                            android:text="Date"/>

                        <com.cts.teamplayer.customui.CustomTextviewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:textSize="@dimen/_12sdp"
                            android:text="@string/all_participants_summary"/>

                        <com.cts.teamplayer.customui.CustomTextView
                            android:id="@+id/tv_name_banchmark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:textSize="@dimen/_11sdp"
                            android:text="@string/benchmark_person_rahul_tamrarkar"/>
                         <com.cts.teamplayer.customui.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_grey"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:textSize="@dimen/_10sdp"
                            android:text="@string/here_are_the_results_of_the_compatibility_between_the_benchmark_person_and_each_participant"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:weightSum="2">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <com.cts.teamplayer.customui.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_9sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                 android:text="Overall results indicate a very low level of compatibility between the participant and the benchmark person"
                                    />
                            </RelativeLayout>
                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/dark_grey"/>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="1">
                                <com.cts.teamplayer.customui.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_9sdp"
                                    android:text="Overall results indicate a very low level of compatibility between the participant and the benchmark person"/>

                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/black"
                            android:weightSum="3"
                            >
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_25sdp">
                                <com.cts.teamplayer.customui.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_9sdp"
                                    />
                            </RelativeLayout>
                            <View
                                android:layout_width="@dimen/_1ssp"
                                android:layout_height="match_parent"
                                android:background="@color/light_grey"/>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_30sdp">
                                <com.cts.teamplayer.customui.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/significant_disagreement"
                                    android:layout_centerVertical="true"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_9sdp"
                                    />
                            </RelativeLayout>
                            <View
                                android:layout_width="@dimen/_1ssp"
                                android:layout_height="match_parent"
                                android:background="@color/light_grey"/>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_30sdp">
                                <com.cts.teamplayer.customui.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/significant_agreement"
                                    android:layout_centerVertical="true"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_9sdp"
                                    />
                            </RelativeLayout>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/recycler_significiant_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                 <com.cts.teamplayer.customui.CustomTextviewBold
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/_10sdp"/>
                    </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
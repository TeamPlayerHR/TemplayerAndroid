<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:scaleType="fitXY"
        android:src="@drawable/login_bg"/>
    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_150sdp"
        android:background="@drawable/rounded_whit_btn"
        android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    >
                    <com.cts.teamplayer.customui.CustomTextviewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_back"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_18sdp"
                        />
                    <com.cts.teamplayer.customui.CustomTextviewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_in_to_continue"
                        android:padding="@dimen/_2sdp"
                        android:textColor="@color/light_grey1"
                        android:textSize="@dimen/_12sdp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:background="@drawable/rounded_doted_btn"
                        >
                        <ImageView
                            android:id="@+id/iv_user_input"
                            android:layout_width="@dimen/_17sdp"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/user_input"
                            />
                        <com.cts.teamplayer.customui.CustomEditText
                            android:id="@+id/edit_user_name"
                            android:layout_toRightOf="@+id/iv_user_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:hint="@string/username"
                            android:textColorHint="@color/light_grey_new"
                            android:padding="@dimen/_10sdp"
                            android:textSize="@dimen/_10sdp"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/rounded_doted_btn"
                        >
                        <ImageView
                            android:id="@+id/iv_user_pass"
                            android:layout_width="@dimen/_17sdp"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/password_show"
                            />
                        <com.cts.teamplayer.customui.CustomEditText
                            android:id="@+id/edit_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/iv_user_pass"
                            android:layout_toLeftOf="@+id/iv_user_password"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:textColorHint="@color/light_grey_new"
                            android:hint="Password"
                            android:padding="@dimen/_10sdp"
                            android:textSize="@dimen/_10sdp"
                            />
                        <ImageView
                            android:id="@+id/iv_user_password"
                            android:layout_width="@dimen/_17sdp"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/password_hidden"
                            />
                    </RelativeLayout>
                    <com.cts.teamplayer.customui.CustomButton
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/login"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:background="@color/light_blue"
                        />
                    <com.cts.teamplayer.customui.CustomTextviewBold
                        android:id="@+id/tv_forgot_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/black"
                        android:text="@string/forgot_your_password"
                        />
                    <com.cts.teamplayer.customui.CustomTextviewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/black"
                        android:text="@string/don_t_have_an_account_sign_up"
                        />


                </LinearLayout>
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/light_blue"
                    android:text="@string/skip"
                    />

            </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
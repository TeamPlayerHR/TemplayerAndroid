<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <com.cts.teamplayer.customui.CustomTextView
                android:id="@+id/tv_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Name"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                />
        </RelativeLayout>
        <View
            android:layout_width="@dimen/_1ssp"
            android:layout_height="match_parent"
            android:background="@color/whit_new"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="match_parent">
            <com.cts.teamplayer.customui.CustomTextView
                android:id="@+id/tv_no_of_participat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                />
        </RelativeLayout>
        <View
            android:layout_width="@dimen/_1ssp"
            android:layout_height="match_parent"
            android:background="@color/whit_new"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent">
            <com.cts.teamplayer.customui.CustomTextView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="Show"
                android:gravity="center"
                android:background="@color/light_blue"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp"
                />
        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:elevation="@dimen/_10sdp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:id="@+id/tv_team_name_new"
                    android:layout_toLeftOf="@+id/lll"
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text="Team Name : Rahul"/>
                <LinearLayout
                    android:id="@+id/lll"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.cts.teamplayer.customui.CustomTextviewBold
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:text="Option:"/>
                    <com.cts.teamplayer.customui.CustomTextviewBold
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:text="Show"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@color/light_blue"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9sdp"
                        />
                </LinearLayout>

            </RelativeLayout>
            <com.cts.teamplayer.customui.CustomTextviewBold
                android:id="@+id/tv_no_of_participat_new"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:text="No. of Participants:"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/light_grey"/>

        </LinearLayout>

</RelativeLayout>